<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundColor" />
            <gradient android:angle="-90" android:startColor="#76BBD8" android:endColor="#1E5EA2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundColor" />
            <solid android:color="#1E5EA2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundColor" />
            <gradient android:angle="-90" android:startColor="#c0d0f3" android:endColor="#60759e" />
        </shape>
    </item>
</selector>
